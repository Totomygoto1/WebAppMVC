@using WebAppMVC.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Time Report</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        tr {
            font-family: Verdana;
            font-size: 12px;
            color: white;
        }
        dl {
            font-family: Verdana;
            font-size: 12px;
            color: white;
        }
        p {
            font-family: Verdana;
            font-size: 12px;
            color: cornflowerblue;
        }
        div {
            font-family: Verdana;
            font-size: 12px;
            color: cornflowerblue;
        }
        h4 {
            font-family: Verdana;
            font-size: 16px;
            color: cornflowerblue;
        }
        h2 {
            font-family: Verdana;
            font-size: 22px;
            color: white;
        }
    </style>
</head>
<body background="~/images/darkgrey_bg.png">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SwipeIT Inc.", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @{
                        if (HttpContext.Current.Request.Cookies["sitecookies"] != null)
                        {

                            var name = Request.Cookies["sitecookies"]["Name"].ToString();
                            var ID = Request.Cookies["sitecookies"]["Email"].ToString();
                            var emp_id = Convert.ToInt32(ID);


                            if (name == "Kontoret")
                            {
                            <li>@Html.ActionLink("Employee", "Index", "Employees")</li>
                            <li>@Html.ActionLink("Customer", "Index", "Customers")</li>
                            <li>@Html.ActionLink("Assignment", "Index", "Assignments")</li>
                            <li>@Html.ActionLink("Login", "Index", "Logins")</li>
                            }
                            else
                            {
                            <li>@Html.ActionLink("Employee", "EmployeeIndex/" + emp_id, "Employees")</li>
                            <li>@Html.ActionLink("Customer", "EmployeeIndex", "Customers")</li>
                            <li>@Html.ActionLink("Assignment", "EmployeeIndex/" + emp_id, "Assignments")</li>
                            }

                        }
                        else
                        {

                        }
                        }


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
        <footer>
            <p>&copy; @DateTime.Now.Year - SwipeIT Inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
