@model IEnumerable<WebAppMVC.Models.Assignment>


@{
    ViewBag.Title = "SalaryEmployee";
}

@{  var month = "";
    var year = "";
    if (Request["Month"] != null)
    {
        month = Request["Month"];
    }
    if (Request["Year"] != null)
    {
        year = Request["Year"];
    }

}

<h2>Salary Report @ViewBag.employeename</h2>

<hr />

<form method="post" action="">
    <div>
                Choose which Year:
                <select name="Year">
                    <option value="2019">2019</option>
                    <option value="2018">2018</option>
                    <option value="2017">2017</option>
                </select>
                Choose which Month:
                <select name="Month">
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
                &nbsp;
                <input type="submit" value="Submit" />
        </div>
    <div style="padding:10px;">
        <p>
            Your choosen year: @ViewBag.startyear
            Your choosen month: @ViewBag.startmonth
        </p>
    </div>
</form>

<hr />
<p>
    @ViewBag.hourly
</p>
<p>
    @ViewBag.workhours
</p>
<p>
    @ViewBag.total
</p>
<hr />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoursAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OB1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OB2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Karens)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SickLeave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VAB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vacation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacationCompensation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtraCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GPSLocation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OB1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OB2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Karens)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SickLeave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VAB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationCompensation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPSLocation)
            </td>
        </tr>
    }

</table>
